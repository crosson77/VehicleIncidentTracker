@model VehicleIncidentTracker.Views.Home.AddIncidentModel

<h1>Add Incident</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Incident.DateAndTime" class="control-label"></label>
                <input asp-for="Incident.DateAndTime" class="form-control" />
                <span asp-validation-for="Incident.DateAndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Incident.Note" class="control-label"></label>
                <input asp-for="Incident.Note" class="form-control" />
                <span asp-validation-for="Incident.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Incident.VIN" class="control-label"></label>
                <input asp-for="Incident.VIN" class ="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Incident" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Incidents">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
